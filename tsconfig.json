{
    "compilerOptions": {
      "target": "es2015",                          
      "lib": ["dom", "dom.iterable", "esnext"],  
      "allowJs": true,                           
      "skipLibCheck": true,                     
      "esModuleInterop": true,                  
      "allowSyntheticDefaultImports": true,      
      "strict": true,                           
      "forceConsistentCasingInFileNames": true,  
      "module": "esnext",                       
      "moduleResolution": "node",                
      "resolveJsonModule": true,                 
      "jsx": "react-jsx",                        
      "noEmit": true                             
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  